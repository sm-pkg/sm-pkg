{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "https://raw.githubusercontent.com/sm-pkg/sm-pkg/refs/heads/master/schema/plugin.json",
  "title": "sm-pkg plugin definition",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "The name of the package"
    },
    "url": {
      "type": "string",
      "description": "Home of the plugin"
    },
    "description": {
      "type": "string",
      "description": "Package description"
    },
    "license": {
      "type": "string",
      "description": "The license of the plugin"
    },
    "version": {
      "type": "string",
      "description": "The version of the package"
    },
    "inputs": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "description": "The input (.sp) files for the package"
      }
    },
    "authors": {
      "type": "array",
      "items": {
        "type": "string",
        "description": "List of authors"
      }
    },
    "configs": {
      "type": "array",
      "items": {
        "type": "string",
        "description": "List of configs"
      }
    },
    "dependencies": {
      "type": "array",
      "items": {
        "type": "string",
        "description": "List of dependencies"
      }
    }
  },
  "required": ["name", "description", "version", "inputs"]
}
